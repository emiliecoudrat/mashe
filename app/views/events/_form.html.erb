  <%= bootstrap_form_for @event do |f| %>
    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_field :description %>
    </div>
    <h3>Guests</h3>
    <div id="guests">
      <%= f.fields_for :guests do |guest| %>
        <%= render 'guest_fields', :f => guest %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add guest', f, :guests %>
      </div>
    </div>
    <%= f.submit %>
<% end %>
