
<div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
        <h1> Ma share annonce : <%= "#{@advert.title}"%> </h1>
      </div>
    </div>

    <div class="vertical_spacer"> </div>

    <div class="row">
      <div class="col-xs-6 col-sm-4">
         <div> <strong> THEME :</strong> <%= @advert.category_list.join(", ") %></div>
         <br>
          <span> <strong> OPPORTUNITE :</strong> <%= "#{@advert.transaction_type}"%> </span>
           <br>
          <span> <strong> TITRE : </strong> <%= "#{@advert.title}"%> </span>
           <br>
        <div class="price_cents">
          <span class="pricetag">
          <span> <strong> PRIX : </strong> <%= "#{@advert.price_cents}"%>€</span>
        </div>
      </div>

      <div class="col-xs-6 col-sm-4">
        <span> <strong>DESCRIPTION : </strong> <%= "#{@advert.description}"%> </span>
      </div>

      <div class="col-xs-6 col-sm-4">
        <% @advert.advertpictures.each do |advert_picture| %>
          <%= image_tag(advert_picture.picture(:thumb)) %>
        <% end %>
      </div>
  </div>

 <div class="vertical_spacer"> </div>

    <div class="row">
      <div class="col-xs-12 col-sm-12 ">
        <span> Annonce mise à jour le : <%= "#{@advert.updated_at}"%> </span>
        <div class="col-xs-12 col-sm-12 ">
        <span> Annonce publiée le : <%= "#{@advert.created_at}"%> </span>
      </div>
    </div>

  <div class="vertical_spacer"> </div>

  <div class="row">
    <div class="col-xs-8 col-offset-2">
      <%= link_to 'Mettre à jour votre annonce', edit_school_advert_path(@school, @advert), class: "btn btn-primary" %>
      <br>
       <%= link_to 'Voir toutes les annonces', school_adverts_path(@school), class: "btn btn-primary" %>
    </div>
  </div>

<div class="vertical_spacer"> </div>

</div>